!!!
%html
  %head
    %title Digital Minds
    = favicon_link_tag
    = stylesheet_link_tag 'application.css', :media => 'screen, projection'
    /[if lt IE 8]
      = stylesheet_link_tag 'ie.css', :media => 'screen, projection'
    = csrf_meta_tag
    = javascript_include_tag 'application'
  %body
    .navbar
      .navbar-inner
        .container
          %a{:class => 'brand', :href => root_url}
            Digital Minds
          .nav-collapse
            %ul{:class => 'nav nav-pills'}
              = render 'shared/links'
          .pull-right
            = link_to(image_tag('twitter_logo.png', :size => '35x35'), 'http://www.twitter.com')
            = link_to(image_tag('facebook_logo.jpeg', :size => '35x35'), 'http://www.facebook.com')
    .container.main
      .notice-area
        = render 'shared/flashes'
      = yield
    .footer
      %hr
      .center
        %span{:class => 'badge badge-info'} 
          &copy; 2012. Digital Minds Technologies Inc. All rights reserved.
    = render 'shared/contact'

